{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true, 
    "baseUrl": "./",
    "paths": {
      "database/*": ["./src/database/*"],
      "routes/*": ["./src/routes/*"],
      "api/*": ["./src/api/*"],
    }
  },
  "include": ["./**/*.ts"]
}